{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {"tools": ["Write"]},
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/sprint-plan-validator.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {"tools": ["Edit", "Write"]},
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/typescript-preflight.sh",
            "timeout": 40000
          },
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/vsa-validate.sh"
          }
        ]
      },
      {
        "matcher": {"tools": ["Write"]},
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/auto-format.sh"
          }
        ]
      },
      {
        "matcher": {"tools": ["Write"]},
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/sprint-plan-post-validator.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": {"tools": ["resume", "compact", "clear"]},
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/session-start-continuity.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/pre-compact-save-state.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/check-tests-pass.sh"
          }
        ]
      }
    ]
  }
}
