{
  "version": "1.0.0",
  "name": "Node.js Quality Check Hook",
  "description": "Quality checks optimized for Node.js TypeScript projects",
  "projectType": "node-typescript",
  "typescript": {
    "enabled": true,
    "showDependencyErrors": false
  },
  "eslint": {
    "enabled": true,
    "autofix": true
  },
  "prettier": {
    "enabled": true,
    "autofix": true
  },
  "general": {
    "autofixSilent": true,
    "debug": false
  },
  "rules": {
    "console": {
      "enabled": true,
      "severity": "warning",
      "message": "Use logger instead of console (except in scripts/)"
    },
    "asAny": {
      "enabled": true,
      "severity": "error",
      "message": "Forbidden: 'as any' breaks type safety. Use proper types or Zod validation"
    },
    "asUnknown": {
      "enabled": true,
      "severity": "error",
      "message": "Forbidden: 'as unknown as T' breaks type safety. Fix types properly"
    },
    "nonNullAssertion": {
      "enabled": true,
      "severity": "error",
      "message": "Forbidden: '!' non-null assertion. Use optional chaining '?.' and nullish coalescing '??'"
    },
    "anyType": {
      "enabled": true,
      "severity": "error",
      "message": "Forbidden: 'any' type. Use 'unknown' or specific types"
    },
    "debugger": {
      "enabled": true,
      "severity": "error",
      "message": "Remove debugger statements before committing"
    },
    "todos": {
      "enabled": true,
      "severity": "info",
      "patterns": ["TODO", "FIXME", "HACK"]
    }
  },
  "fileTypes": {
    "cli": {
      "patterns": ["index.ts", "index.js", "cli.ts", "cli.js"],
      "paths": ["src/", "bin/"]
    },
    "transport": {
      "patterns": ["*.ts", "*.js"],
      "paths": ["src/client/", "src/server/", "typescript-sdk/src/client/", "typescript-sdk/src/server/"]
    }
  },
  "ignore": {
    "paths": [
      "node_modules/",
      "build/",
      "dist/",
      ".next/",
      "coverage/",
      "public/",
      "*.config.js",
      "*.config.ts"
    ]
  }
}